// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String
}

model Snippet {
  id    Int    @id @default(autoincrement())
  name  String
  code  String
}

model Project {
  id           Int        @id @default(autoincrement())
  name         String
  fileFolderId String     @unique
  fileFolder   FileFolder @relation(fields: [fileFolderId], references: [id])
}

model FileFolder {
  id        String      @id @default(uuid())
  name      String
  isFolder  Boolean
  content   String?     // Nullable for folders
  parentId  String?     @map("parent_id")  // Self-relation to represent the hierarchy
  parent    FileFolder? @relation("children", fields: [parentId], references: [id])
  children  FileFolder[] @relation("children")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  project   Project?    
}

